<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".view.ui.activities.LoginActivity">

    <ImageView
        android:id="@+id/ivlogo"

        android:layout_width="339dp"
        android:layout_height="298dp"

        android:layout_width="505dp"
        android:layout_height="228dp"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="344dp"
        android:background="#A3606D"
        app:layout_constraintBottom_toTopOf="@+id/btrecuperar"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.493"

        app:layout_constraintHorizontal_bias="0.502"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/tvemail"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/estiloborde_editext"
        android:ems="10"
        android:fontFamily="@font/alegreyaitalic"
        android:hint="Email o User"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />


    <EditText
        android:id="@+id/tvclave"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/estiloborde_editext"
        android:ems="10"
        android:fontFamily="@font/alegreyaitalic"
        android:hint="Password"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvemail"
        app:layout_constraintVertical_bias="0.057" />

    <Button
        android:id="@+id/btinicio"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/estiloborde_botton"
        android:fontFamily="@font/alegreyabold"
        android:text="Iniciar Sesión"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvclave"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/btrecuperar"
        android:layout_width="197dp"
        android:layout_height="33dp"
        android:layout_marginBottom="34dp"

        android:fontFamily="@font/alegreyaitalic"
        android:text="Recuperar contraseña"

        android:background="@color/color_secundario"
        android:fontFamily="@font/alegreyaitalic"
        android:text="Recuperar contraseña"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivlogo" />

    <Button
        android:id="@+id/btregistro"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/estiloborde_botton"
        android:fontFamily="@font/alegreyabold"
        android:text="Registrarse"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btinicio" />

</androidx.constraintlayout.widget.ConstraintLayout>