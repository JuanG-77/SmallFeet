<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CuentaFragment"
    android:orientation="vertical"
    android:background="@color/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


    <ImageView
        android:id="@+id/fotoperfil"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:src="@drawable/camara"></ImageView>

    <Button
        android:id="@+id/btmcamara"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/color_centro"
        android:text="camara"
        android:textColor="#070707"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btmgaleria"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/color_centro"
        android:text="Galeria"
        android:textColor="#0C0C0C"
        android:textStyle="bold"></Button>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="250dp"
        android:textStyle="bold"
        android:text="Nombre completo">
    </TextView>
    
    <EditText
        android:id="@+id/Nombrecompleto"
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:text="Pepito Perez"
        android:layout_marginTop="275dp"
        android:inputType="none"
        android:background="@drawable/estiloborde_botton"
        android:textIsSelectable="false">
    </EditText>

    <ImageButton
        android:id="@+id/nombreedit"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/estiloborde_botton"
        android:src="@drawable/editar">
    </ImageButton>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="330dp"
        android:textStyle="bold"
        android:text="Correo electronico">
    </TextView>

    <EditText
        android:id="@+id/Correocompleto"
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:text="Pepito@gmail.com"
        android:layout_marginTop="355dp"
        android:inputType="none"
        android:background="@drawable/estiloborde_botton"
        android:textIsSelectable="false">
    </EditText>

    <ImageButton
        android:id="@+id/correoedit"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/estiloborde_botton"
        android:src="@drawable/editar">
    </ImageButton>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="410dp"
        android:textStyle="bold"
        android:text="Direccion">
    </TextView>

    <EditText
        android:id="@+id/Direccioncompleto"
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:text="Carrera 1 calle 1"
        android:layout_marginTop="435dp"
        android:inputType="none"
        android:background="@drawable/estiloborde_botton"
        android:textIsSelectable="false">
    </EditText>

    <ImageButton
        android:id="@+id/direccionedit"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/estiloborde_botton"
        android:src="@drawable/editar">
    </ImageButton>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="490dp"
        android:textStyle="bold"
        android:text="Telefono">
    </TextView>

    <EditText
        android:id="@+id/Telefonocompleto"
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:text="1111111"
        android:layout_marginTop="515dp"
        android:inputType="none"
        android:background="@drawable/estiloborde_botton"
        android:textIsSelectable="false">
    </EditText>

    <ImageButton
        android:id="@+id/telefononedit"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="215dp"
        android:background="@drawable/estiloborde_botton"
        android:src="@drawable/editar">
    </ImageButton>








    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttonnavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:background="@color/color_centro"
        app:itemIconTint="@color/black"
        app:menu="@menu/menu_navigation_bar">

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</FrameLayout>